	  <th>Subject</th>
	  <th style="text-align:center;">Level</th>
	  <th style="text-align:center;">Grade</th>
	  <th style="text-align:center;">Effort</th>
	  <th style="text-align:center;">Class</th>
	  <th style="text-align:center;">Teacher</th>
	</thead>
	<tbody>
	  {{range .Results}}
		<tr>
		  <td>{{.Subj}}</td>
