	<tbody>
	  <tr>
		<td>Basics</td>
		<td>{{ template "TickCross" .Basics }}</td>
	  </tr>
	  {{ with .Basket }}
		<tr>
		  <td>Attainment 8</td>
		  <td>{{ printf "%.1f" .Overall.Attainment }}</td>
		</tr>
		<tr>
		  <td>Progress 8</td>
		  <td>{{ printf "%+.1f" .Overall.Progress8 }}</td>
		</tr>
	</tbody>
  </table>

  <h4>Progress 8</h4><br>
