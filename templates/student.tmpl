		  </tr>
		  <tr>
			<td>Gender</td>
			<td>{{.Gender}}</td>
		  </tr>
		  <tr>
			<td>KS2 Average</td>
			<td>{{with .KS2}}{{.Av}}{{end}}</td>
		  </tr>
		  <tr>
			<td>Pupil Premium</td>
			<td>{{ template "TickCross" .PP }}</td>
		  </tr>
		  <tr>
			<td>SEN</td>
			<td>{{ template "TickCross" (ne .SEN.Status "N") }}</td>
		  </tr>
		  <tr>
			<td>Ethnicity</td>
			<td>{{.Ethnicity}}</td>
		  </tr>
		  <tr>
